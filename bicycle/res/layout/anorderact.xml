<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".MainActivity" 
    android:background="@color/background">

    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        >
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_centerInParent="true"
       		android:text="订单编号:" />
        
        <TextView
            android:id="@+id/AnorderAct_Order"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_centerInParent="true"
        	android:text="111" />
    </LinearLayout>
    
    <View            
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_height="2px"   
        android:background="@color/lineL"   
        android:layout_width="match_parent">  
	</View>  
	
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        >
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_centerInParent="true"
       		android:text="目的地址:" />
        
        <TextView
            android:id="@+id/AnorderAct_LocaA"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_centerInParent="true"
        	android:text="慎思园7号" />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        >
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_centerInParent="true"
       		android:text="出发地址:" />
        
        <TextView
            android:id="@+id/AnorderAct_LocaB"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_centerInParent="true"
        	android:text="公教" />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        >
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_centerInParent="true"
       		android:text="出发时间:" />
        
        <TextView
            android:id="@+id/AnorderAct_Time"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_centerInParent="true"
        	android:text="5月20日，9:00" />
    </LinearLayout>
    
    <View            
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_height="2px"   
        android:background="@color/lineL"   
        android:layout_width="match_parent">  
	</View>  
	
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        >
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_centerInParent="true"
       		android:text="乘客：" />
        
        <TextView
            android:id="@+id/AnorderAct_Username"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_centerInParent="true"
        	android:text="AAA" />
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        >
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_centerInParent="true"
       		android:text="联系方式:" />
        
        <TextView
            android:id="@+id/AnorderAct_Userphone"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_centerInParent="true"
        	android:text="999999" />
    </LinearLayout>
    
        <View            
	        android:layout_marginTop="20dp"
	        android:layout_marginBottom="10dp"
	        android:layout_height="2px"   
	        android:background="@color/lineL"   
	        android:layout_width="match_parent"/> 
	 
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        >
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_centerInParent="true"
       		android:text="司机：" />
        
        <TextView
            android:id="@+id/AnorderAct_Drivername"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_centerInParent="true"
        	android:text="AAA" />
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/AnorderAct_DriverInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        >
        <TextView
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_centerInParent="true"
       		android:text="联系方式:" />
        
        <TextView
            android:id="@+id/AnorderAct_Driverphone"
        	android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:layout_centerInParent="true"
        	android:text="999999" />
    </LinearLayout>
    
        <View            
	        android:layout_marginTop="20dp"
	        android:layout_marginBottom="10dp"
	        android:layout_height="2px"   
	        android:background="@color/lineL"   
	        android:layout_width="match_parent"/> 
	        
       <Button 
      	     android:id="@+id/AnorderAct_But"
		     android:background="@drawable/bg_but_r"
		     android:layout_gravity="center"
		     android:textColor="@color/textD" 
		     android:text="接 受 订 单"
		     android:textSize="19sp"
		     android:layout_width="250dp"
		     android:layout_height="35dp"		     
     	/>
       
       <ListView
           android:id="@+id/AnorderAct_Listview"
           android:layout_width="match_parent"
           android:layout_height="fill_parent"
           android:scrollbars="none">"
        </ListView> 
       

</LinearLayout>